@model ELTE.IssueR.Models.EpicViewModel

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section AddToHead
{
    <link href="@Url.Content("~/Content/Styles/FancyFormStyle.css")" rel="stylesheet" type="text/css" />
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "A bázis felvétele sikertelen volt! Ellenőrizd a bevitt adatokat!")

    @Html.HiddenFor(epic => epic.ProjectId)
    
    <ul class="form-style-1">
        <li>
            <label>Név<span class="required">*</span></label>
            @Html.TextBoxFor(epic => epic.Name, new { @class = "field-long" })
            <label class="required">@Html.ValidationMessageFor(epic => epic.Name)</label>
        </li>
    </ul>

    <input type="submit" autofocus value="Bázis felvétele" class="buttonlikelink green" />
}
